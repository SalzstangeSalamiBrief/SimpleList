{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "es2020",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*"],      
    },
    "baseUrl": "types",
    "typeRoots": ["types"],
    "types": ["node", "koa", "koa-bodyparser", "koa__router", "mongoose"]
  },
  "include": [
    "src/**/*", "src/public"
  ]
}